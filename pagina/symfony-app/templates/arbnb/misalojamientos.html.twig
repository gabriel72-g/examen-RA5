{% extends 'base.html.twig' %}

{% block title %}Bienvenido {{ app.user.NombreApellidos }}!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h4>{{ titulo }} {{ app.user.NombreApellidos }} </h4>
    
    {{ form_start(form)}}
        {{ 'Descripcion del alojamiento' }}
        {{ form_widget(form.descripcion) }}
        {{ form_widget(form.agregar) }}
    {{ form_end(form) }}

    <table class="table table-striped table-hover mt-3">
        <caption>
            <th>#<th>
            <th>Descripcion<th>
            <th></th>
        </caption>
        <tbody>
            {% for casa in app.user.Alojamientos %}
                <tr>
                    <td>{{ casa.id }} <td>
                    <td>{{ casa.descripcion }}<td>  
                    <td><a href="{{ path('app_alquileres_del_alojamiento', {'id': casa.id} ) }}">Alquileres del alojamiento</a></td>              
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
